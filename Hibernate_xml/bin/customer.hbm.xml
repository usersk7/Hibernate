<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<!-- mapping class with table -->

	<class name="com.cdac.model.Customer" table="Customers">

		<!-- primary key -->

		<id name="cust_id">
			<generator class="assigned"></generator>  <!-- OR   <generator class="org.hibernate.id.assigned"/> --> 
	    </id>

		<!-- mapping property -->
		<property name="custName"></property>   
		<property name="email"></property>
		<property name="phone"></property>

<!-- if column names are diff 
<property name="custName" > <column name="CUST_NAME"/></property> 
 -->
	</class>

</hibernate-mapping>


